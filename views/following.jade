extends layout
block scripts
    script(type='text/javascript', src='static/js/lib/jquery-1.9.1.min.js')
block content
    div(class='container-fluid')
    div(class='row-fluid')
        div(class='span12')
            div(style='margin: 0px auto; width: 480px;')
                form(action='/following', method='POST')
                    input(type='text' class='field span12 pull-right' name='followee' placeholder='Enter name here')
                    div(class='span2 pull-right')
                        button(type='submit' class='btn btn-primary btn-block') Follow
    div(class='row-fluid')
        div(class='span12')
            div(style='margin: 0px auto; width: 480px;')
                #followings
                    for followee in followings
                        p=followee.name
                        hr
